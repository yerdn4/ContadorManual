<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.Gui.MainPage"
             Title="Contador manual" BackgroundColor="Black">
    <Grid
        Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto"/>
            <RowDefinition   Height="auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="0"
            >
            <Border
    Stroke="Gray"
    StrokeThickness="3"
   Background="AntiqueWhite"
    Margin="0,34,0,36">

                <Label
        TextColor="Black"
Text="0"
HorizontalOptions="Center"
Margin="0,24"
FontSize="Large"
FontAttributes="Bold"
        x:Name="ConteoLabel"/>

            </Border>
            
            <HorizontalStackLayout
         HorizontalOptions="Center"
         Spacing="32">
                <Button Text="Contar"
FontSize="Medium"
                 WidthRequest="130"
                Clicked="Button_Clicked_1"  />

                <Button
             Text="Reiniciar"
             FontSize="Medium"
             WidthRequest="130"
             Clicked="Button_Clicked"/>


            </HorizontalStackLayout>




        </VerticalStackLayout>
    </Grid>

</ContentPage>
